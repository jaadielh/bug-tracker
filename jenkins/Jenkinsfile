pipeline {
    agent any

    stages {
        stage('Unit Tests Backend') {
            agent {
                docker {
                    image 'europe-west1-docker.pkg.dev/indra-gcp/cloud-run-source-deploy/bugtracker-backend:latest'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-backend') {
                    sh 'go test -v ./...'
                }
            }
        }

        stage('Unit Test - Frontend') {
            agent {
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('bugtacker-frontend') {
                    sh '''
                      npm ci
                      npm test
                      
                    '''
                }
            }
        }
    }
}
